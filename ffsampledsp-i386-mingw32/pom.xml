<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>com.tagtraum</groupId>
        <artifactId>ffsampledsp</artifactId>
        <version>0.9.17</version>
        <relativePath>../pom.xml</relativePath>
    </parent>
    <artifactId>ffsampledsp-i386-mingw32</artifactId>
    <packaging>dll</packaging>
    <name>FFSampledSP Native Library Windows (32bit)</name>
    <description>Windows 32bit binary library for FFSampledSP compiled via MinGW.</description>
    <dependencies>
        <dependency>
            <groupId>com.tagtraum</groupId>
            <artifactId>ffsampledsp-java</artifactId>
        </dependency>
        <dependency>
            <groupId>com.tagtraum.ffmpeg</groupId>
            <artifactId>ffmpeg</artifactId>
            <classifier>sources-${arch}-${host}</classifier>
        </dependency>

        <!-- the order of dependencies is relevant during linking! -->

        <dependency>
            <groupId>com.tagtraum.ffmpeg</groupId>
            <artifactId>libavformat</artifactId>
            <classifier>${arch}-${host}</classifier>
            <type>a</type>
        </dependency>
        <dependency>
            <groupId>com.tagtraum.ffmpeg</groupId>
            <artifactId>libavcodec</artifactId>
            <classifier>${arch}-${host}</classifier>
            <type>a</type>
        </dependency>
        <dependency>
            <groupId>com.tagtraum.ffmpeg</groupId>
            <artifactId>libavutil</artifactId>
            <classifier>${arch}-${host}</classifier>
            <type>a</type>
        </dependency>
        <dependency>
            <groupId>com.tagtraum.ffmpeg</groupId>
            <artifactId>libswresample</artifactId>
            <classifier>${arch}-${host}</classifier>
            <type>a</type>
        </dependency>
        <dependency>
            <groupId>com.tagtraum.ffmpeg</groupId>
            <artifactId>libz</artifactId>
            <classifier>${arch}-${host}</classifier>
            <type>a</type>
        </dependency>
        <dependency>
            <groupId>com.tagtraum.ffmpeg</groupId>
            <artifactId>libbz2</artifactId>
            <classifier>${arch}-${host}</classifier>
            <type>a</type>
        </dependency>
    </dependencies>

    <properties>
        <arch>i386</arch>
        <host>mingw32</host>
    </properties>

    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack</id>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>com.tagtraum.ffmpeg</groupId>
                                    <artifactId>ffmpeg</artifactId>
                                    <version>${ffmpeg.version}</version>
                                    <type>jar</type>
                                    <classifier>sources-${arch}-${host}</classifier>
                                    <overWrite>true</overWrite>
                                    <outputDirectory>${project.build.directory}/native/include</outputDirectory>
                                    <includes>**/*.h</includes>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>

                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>native-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>

                    <!-- Generate JNI header files based on a list of class name on the classpath -->
                    <!-- The generated include directory is automatically added to include path at compile phase -->
                    <!-- Ensure to have appropriate dependency jar file(s) in your pom -->

                    <javahClassNames>
                        <javahClassName>com.tagtraum.ffsampledsp.FFAudioFileReader</javahClassName>
                        <javahClassName>com.tagtraum.ffsampledsp.FFCodecInputStream</javahClassName>
                        <javahClassName>com.tagtraum.ffsampledsp.FFURLInputStream</javahClassName>
                        <javahClassName>com.tagtraum.ffsampledsp.FFStreamInputStream</javahClassName>
                    </javahClassNames>

                    <compilerProvider>generic</compilerProvider>
                    <compilerExecutable>${mingw.i386.path}/${mingw.i386.crossprefix}${ccompiler}</compilerExecutable>
                    <linkerExecutable>${mingw.i386.path}/${mingw.i386.crossprefix}${ccompiler}</linkerExecutable>

                    <compilerStartOptions>
                        <compilerStartOption>${mingw.compiler.startoptions}</compilerStartOption>
                    </compilerStartOptions>

                    <javahOS>win32</javahOS>
                    <!-- point to windows JNI.h headers -->
                    <jdkIncludePath>${mingw.headers.jni}</jdkIncludePath>

                    <sources>
                        <source>
                            <directory>../ffsampledsp-x86_64-darwin/src/main/c</directory>
                            <includes>
                                <include>*.c</include>
                            </includes>
                        </source>
                        <!-- additional include path -->
                        <source>
                            <!-- FFmpeg headers -->
                            <directory>${project.build.directory}/native/include</directory>
                        </source>
                    </sources>

                    <linkerStartOptions>
                        <linkerStartOption>${mingw.linker.startoptions}</linkerStartOption>
                    </linkerStartOptions>

                    <linkerEndOptions>
                        <linkerEndOption>${mingw.linker.endoptions}</linkerEndOption>
                    </linkerEndOptions>
                </configuration>

            </plugin>
        </plugins>
    </build>
</project>